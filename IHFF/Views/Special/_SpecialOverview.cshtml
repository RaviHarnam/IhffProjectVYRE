@using IHFF.Models;

@model Special

<section class="form">
    @Html.ValidationSummary()
    @using (Html.BeginForm("SpecialOverview", "Special", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ItemID)
        @Html.Label("Aantal", new { @for = "aantal" })
        <br />
        @Html.TextBox("aantal")
        <br /><br />
        @Html.Label("Datum");
        <br />
        <select name="voorstellingId">
            @foreach (Voorstelling voorstelling in Model.Voorstellingen)
            {
                <option value=@voorstelling.VoorstellingId>@voorstelling.BeginTijd.ToString("dd/MM/yy HH:mm")</option>
            }
        </select>
        <br /><br />
        <input type="submit" formmethod="post" value="Add to cart" />
    }
</section>
