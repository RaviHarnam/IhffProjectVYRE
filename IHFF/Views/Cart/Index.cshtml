@Styles.Render("~/Content/CartStyle.css")
@using IHFF.Models;

@{
    ViewBag.Title = "Cart";

}

@model IEnumerable<Event>

<head>
    <title>Cart</title>
</head>
<body>

    <h2>Cart</h2>

    <content>
        <table class="cart">
            <tr class="CartHeader">
                <th class="Title"><h3>Title</h3></th>
                <th class="Time"><h3>Time</h3></th>
                <th class="Amount"><h3>Amount</h3></th>
                <th class="Price"><h3>Price</h3></th>
                <th class="Delete"><h3>Delete</h3></th>
            </tr>
            @foreach (Event m in Model)
            {

                <tr class="CartContent">
                    <td class="Title"><h4>@m.Titel</h4></td>
                    <td class="Time" id="Time"><h4>@m.DatumTijd.ToString("dd/MM/yy")<br />@m.DatumTijd.ToString("HH:mm") </h4></td>
                    <td class="Amount"><h4>@m.Aantal</h4></td>
                    <td class="Price"><h4>@m.Prijs</h4></td>
                    <td class="Delete" id="Delete">@Html.ActionLink("X", "DeleteCartItem", "Cart", new { cartId = m.CartId }, new { @Class = "deleteCross" })</td>
                </tr>
            }
        </table>
        @using (Html.BeginForm("Cart", "Cart", FormMethod.Post))
        {
        <table class="Options">
            <tr class="PickupOptions">
                <td><p>Ticket Reception Method:</p></td>
                <td class="right">
                    <input type="radio" onclick="HandleClick(this)" name="pickup" value="1" checked="checked"/>Pick up at desk.<br />
                    <input type="radio" onclick="HandleClick(this)" name="pickup" value="2" />Send via E-mail.
                </td>
            </tr>
            <tr class="PaymentOptions">
                <td><p>Payment Method:</p></td>
                <td class="right">
                    <input type="radio" name="payment" value="creditCard" checked="checked" />Credit Card<br />
                    <input type="radio" name="payment" value="iDeal" />iDeal<br />
                    <input type="radio" name="payment" value="BankTransfer" />Bank Transfer<br />
                    <input type="radio" name="payment" value="PayPal" />Pay Pal
                </td>
            </tr>
            <tr>
                <td id="textboxcell">
                    <label for="Name"  id="lbl_name">Name:</label>
                    <input type="text" id="removeBoxName" name="Name" />
                    <label for="Email" id="lbl_email" style="display: none;">E-mail:</label>
                    <input type="text" id="removeBoxEmail" name="Email" style="display: none;"/>
                </td>
            </tr>
            <tr class="ConfirmButton">
                <td></td>
                <td><button>confirm</button></td>
            </tr>
        </table>
        }
    </content>
</body>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<script type="text/javascript">
    function HandleClick(radbtn) {
        var currentValue = 0;
        currentValue = radbtn.value;
        if (currentValue == 1) //Desk
        {
            //var oldTd = document.getElementById("removeBoxEmail");
            $('#removeBoxEmail').css('display', 'none');
            $('#lbl_email').css('display', 'none');
            $('#removeBoxName').css('display', 'block');
            $('#lbl_name').css('display', 'block');
            document.getElementsByName('Email')[0].value = "";
            //var td = document.getElementById("textboxcell");
            //td.Append('<input type="text" name="name" id="removeBoxName" />');
        }
        else if(currentValue == 2){
            //var td = document.getElementById("textboxcell");
            $('#removeBoxName').css('display', 'none');
            $('#lbl_name').css('display', 'none');
            $('#removeBoxEmail').css('display', 'block');
            $('#lbl_email').css('display', 'block');
            document.getElementsByName('Name')[0].value = "";
            //td.Append('<input type="text" name="Email" id="removeBoxEmail" />');
        }
        
    }
</script>