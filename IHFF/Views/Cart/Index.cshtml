@Styles.Render("~/Content/CartStyle.css")
@using IHFF.Models;

@{
    ViewBag.Title = "Cart";

}

@model IEnumerable<Event>

<head>
    <title>Cart</title>
</head>
<body>

    <h2>Cart</h2>

    <content>
        <table class="cart">
            <tr class="CartHeader">
                <th class="Title"><h3>Title</h3></th>
                <th class="Time"><h3>Time</h3></th>
                <th class="Amount"><h3>Amount</h3></th>
                <th class="Price"><h3>Price</h3></th>
                <th class="Delete"><h3>Delete</h3></th>
            </tr>
            @foreach (Event m in Model)
            {

                <tr class="CartContent">
                    <td class="Title"><h4>@m.Titel</h4></td>
                    <td class="Time" id="Time"><h4>@m.DatumTijd.ToString("dd/MM/yy")<br />@m.DatumTijd.ToString("HH:mm") </h4></td>
                    <td class="Amount"><h4>@m.Aantal</h4></td>
                    <td class="Price"><h4>@m.Prijs</h4></td>
                    <td class="Delete" id="Delete">@Html.ActionLink("X", "DeleteCartItem", "Cart", new { cartId = m.CartId }, null)</td>
                </tr>
            }
        </table>
        <table class="Options">
            <tr class="PickupOptions">
                <td><p>Ticket Reception Method:</p></td>
                <td class="right">
                    <input type="radio" name="pickup" value="desk" />Pick up at desk.<br />
                    <input type="radio" name="pickup" value="eMail" />Send via E-mail.
                </td>
            </tr>
            <tr class="PaymentOptions">
                <td><p>Payment Method:</p></td>
                <td class="right">
                    <input type="radio" name="payment" value="creditCard"/>Credit Card.<br/>
                    <input type="radio" name="payment" value="iDeal"/>iDeal.<br/>
                    <input type="radio" name="payment" value="BankTransfer"/>Bank Transfer.<br/>
                    <input type="radio" name="payment" value="PayPal"/>Pay Pal.
                </td>
            </tr>
            <tr class="ConfirmButton">
                <td></td>
                <td><button>confirm</button></td>
            </tr>
        </table>
    </content>
</body>
