@using IHFF.Models.Input;
@{
    ViewBag.Title = "AddMuseum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MuseumInputModel


@Styles.Render("~/Content/MovieDetailPageStyle.css")
@Styles.Render("~/Content/EditPages.css")

@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <h2>Add Museum</h2>
    <input type="Submit" value="Add museum" formmethod="Post" class="Edit-update" size="30" />
    <p>
        @Html.LabelFor(m => m.Naam):
        @Html.TextBoxFor(m => m.Naam, new { @Size = 30 })
    </p>

    <img class="bannerimg" width="890" height="380" src="" />
    <p>
        @Html.Label("Banner Picture Link"):
        @Html.TextBox("afbLink", null, new { @Size = 30 }) <br/>
        @Html.Label("Overview Picture Link"):
        @Html.TextBox("afbLinkOverview", null, new {@Size = 30 })
    </p>

        <section class="summary">
            <h3>Summary</h3>
            @Html.TextAreaFor(m => m.Omschrijving, new { @Rows = 8, @cols = 40 })
        </section>

        <section class="info">

            <h3>Contact:</h3>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.Telefoon):</td>
                    <td> @Html.TextBoxFor(m => m.Telefoon, new { @Size = 30, @placeholder = "00 12345678"})</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Website):</td>
                    <td> @Html.TextBoxFor(m => m.Website, new { @Size = 30, @placeholder = "http://www.example.com"})</td>
                </tr>
            </table>
            <h3>Prices</h3>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.Adults):</td>
                    <td> @Html.TextBoxFor(m => m.Adults, new { @Size = 30, @placeholder = "€10.00" })</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Kids):</td>
                    <td> @Html.TextBoxFor(m => m.Kids, new { @Size = 30, @placeholder = "€10.00" })</td>
                </tr>
            </table>
            <h3>Opening Hours:</h3>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.Maandag):</td>
                    <td> @Html.TextBoxFor(m => m.Maandag, new { @Size = 30, @placeholder = "09.00 - 17.00"})</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Dinsdag):</td>
                    <td> @Html.TextBoxFor(m => m.Dinsdag, new { @Size = 30, @placeholder = "09.00 - 17.00" })</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Woensdag):</td>
                    <td> @Html.TextBoxFor(m => m.Woensdag, new { @Size = 30, @placeholder = "09.00 - 17.00" })</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Donderdag):</td>
                    <td> @Html.TextBoxFor(m => m.Donderdag, new { @Size = 30, @placeholder = "09.00 - 17.00" }) </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Vrijdag):</td>
                    <td> @Html.TextBoxFor(m => m.Vrijdag, new { @Size = 30, @placeholder = "09.00 - 17.00" }) </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Zaterdag):</td>
                    <td> @Html.TextBoxFor(m => m.Zaterdag, new { @Size = 30, @placeholder = "09.00 - 17.00" }) </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.Zondag):</td>
                    <td> @Html.TextBoxFor(m => m.Zondag, new { @Size = 30, @placeholder = "09.00 - 17.00" }) </td>
                </tr>
            </table>
            <h3>Location:</h3>
            <table>
                <tr>
                    <td> @Html.LabelFor(m => m.MuseumLocatie.Straat):</td>
                    <td> @Html.TextBoxFor(m => m.MuseumLocatie.Straat, new {@placeholder = "Street" })</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.MuseumLocatie.Huisnummer):</td>
                    <td> @Html.TextBoxFor(m => m.MuseumLocatie.Huisnummer, null, new {@type = "number", @placeholder = "20" })</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.MuseumLocatie.Toevoeging):</td>
                    <td> @Html.TextBoxFor(m => m.MuseumLocatie.Toevoeging, new { @placeholder = "A"} )</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.MuseumLocatie.Postcode):</td>
                    <td> @Html.TextBoxFor(m => m.MuseumLocatie.Postcode, new {@placeholder = "2000 AA"})</td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(m => m.MuseumLocatie.Plaats):</td>
                    <td> @Html.TextBoxFor(m => m.MuseumLocatie.Plaats, new {@placeholder = "City"})</td>
                </tr>
            </table>
        </section>
}