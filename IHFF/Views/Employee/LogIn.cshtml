
@using IHFF.Models;
@Styles.Render("~/Content/EditPages.css")
@model Employee
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Log In</h2>


@using (Html.BeginForm("LogIn", "Employee", FormMethod.Post, new { @Class = "loginForm" }))
{

    <fieldset class="loginFieldset">
        @Html.ValidationMessage("login-error")
        <p> @Html.ValidationMessageFor(m => m.Gebruikersnaam)</p>
        @Html.LabelFor(m => m.Gebruikersnaam)
        <br />
        @Html.TextBoxFor(m => m.Gebruikersnaam)
        <br /> <br/>
        <p>@Html.ValidationMessageFor(m => m.Wachtwoord) </p>
        @Html.LabelFor(m => m.Wachtwoord)
        <br />
        @Html.PasswordFor(m => m.Wachtwoord)
        <br /><br />
        <input type="Submit" class="logoff" value="Log In" />
    </fieldset>
}
