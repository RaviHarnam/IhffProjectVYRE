@using IHFF.Models;

@Styles.Render("~/Content/MovieDetailPageStyle.css");
@{
    ViewBag.Title = "EditMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Movie

<h2>Edit Movie</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
@Html.TextBoxFor(m => m.Titel, new  {@Value = Model.Titel })

<img class="bannerimg" src=@Model.ItemAfbeelding.Link />

<section class="summary">
    <h3>Summary</h3>
    <p>@Model.Omschrijving</p>
</section>
<section class="info">
    <h3>Info</h3>
    <p>Rating: @Model.Rating</p>
    <p>Director: @Model.Director</p>
    <p>Writers: @Model.Writers</p>
    <p>Stars: @Model.Stars</p>
</section>
}