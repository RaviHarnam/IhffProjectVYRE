@using IHFF.Models.Input;
@{
    ViewBag.Title = "AddSpecial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/MovieDetailPageStyle.css")
@Styles.Render("~/Content/EditPages.css")

@model SpecialInputModel

@Html.ValidationSummary()
@using (Html.BeginForm(FormMethod.Post))
{
<h2>Add Special</h2>
<input type="Submit" value="Add special" formmethod="Post" class="Edit-update" size="30" />

<p>
    @Html.LabelFor(m => m.Titel):
    @Html.TextBoxFor(m => m.Titel)
</p>
    <img src="" alt="placeholder" class="empty_afb" width="759" height="435" />
    <p>
        @Html.Label("afbLink", "Picture Link"):
        @Html.TextBox("afbLink", "", new { @Size = 30 })

        @Html.DropDownListFor(h => h.Highlight, new SelectList(new[]
    {
    new SelectListItem { Value = "False", Text="False", Selected = true},
    new SelectListItem { Value = "True", Text="True"},
    },
    "Value",
    "Text"
    ), new { @Class = "DropDownHighlight" })

        @Html.LabelFor(m => m.Highlight, "Highlight: ", new { @Class = "DropDownHighlight" })
    </p>
    <section class="summary">
        <h3>Summary</h3>
        @Html.TextAreaFor(m => m.Omschrijving, new { @Rows = 8, @cols = 40 })
    </section>
    <section class="info">
        <h3>Info</h3>
        <table>
            <tr>
                <td> @Html.LabelFor(m => m.Speaker):</td>
                <td> @Html.TextBoxFor(m => m.Speaker, new { @Size = 30 })</td>
            </tr>
            <tr>
                <td> @Html.LabelFor(m => m.SpokenLanguage):</td>
                <td> @Html.TextBoxFor(m => m.SpokenLanguage, new { @Size = 30 })</td>
            </tr>            
        </table>
    </section>











}