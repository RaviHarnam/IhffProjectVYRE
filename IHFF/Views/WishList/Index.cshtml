                                        if (vorige != null) //Er zijn meerdere vorstellingen op 1 dag (als true)
                                        {
                                            //Meerder voorstellingen op 1 dag.
                                            DateTime vorigeEindRooster = vorige.EventEindTijd; //Vorige eindtijd
