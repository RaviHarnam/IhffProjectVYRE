                                                    for (DateTime i = beginRooster; i <= EindRooster; i = i.AddMinutes(30)) //Maken van gevulde hokjes
                                                    {
                                                        int aantalHokjes = (int)((ev.EventEindTijd - ev.DatumTijd).TotalMinutes / 30); //Aantal halve uren

